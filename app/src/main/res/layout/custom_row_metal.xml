<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="380dp"

        android:layout_margin="10dp"
        card_view:cardCornerRadius="9dp"
        card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/coverImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/metals_003" />

        <TextView
                android:id="@+id/title_name"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coverImage"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="7dp"
                android:maxLines="3"
                android:padding="8dp"
                android:text="title"
                android:textColor="#222"

                android:shadowColor="#b3b2b2"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"

                android:textSize="24sp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/text_Cc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_name"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="39dp"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="7dp"
                android:maxLines="3"
                android:padding="8dp"
                android:textStyle="bold"
                android:text="description"
                android:textColor="#666"

                android:shadowColor="#7c7b7b"
                android:shadowDx="2"
                android:shadowDy="1"
                android:shadowRadius="5"

                android:textSize="14dp"/>

        <TextView
                android:id="@+id/text_exchangedate"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text_rate"
                android:layout_alignBaseline="@+id/title_name"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="29dp"
                android:layout_marginRight="29dp"
                android:layout_marginBottom="27dp"
                android:textColor="#4e4e4e"
                android:text="TextView"

                android:shadowColor="#c7c7c7"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="5"


                android:textStyle="bold" android:layout_marginTop="25dp" android:layout_below="@+id/coverImage"/>

        <TextView

                android:id="@+id/text_rate"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coverImage"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="69dp"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp"
                android:textStyle="bold"
                android:textColor="#2b49dc"
                android:text="TextView"


                android:shadowColor="#cecccc"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="3"
        />

    </RelativeLayout>
</android.support.v7.widget.CardView>
