<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:layout_margin="10dp"

    card_view:cardCornerRadius="9dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="546dp"
        >

        <ImageView
            android:id="@+id/coverImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"

            android:src="@drawable/nbu_image01" />

        <RelativeLayout
            android:id="@+id/title_name_liner"
            android:layout_below="@+id/coverImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:shadowColor="#7c7b7b"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="5"

                android:text="title"
                android:textColor="#7e4c19"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_Cc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_name_liner"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="67dp"

            android:shadowColor="#7c7b7b"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="5"

            android:maxLines="3"
            android:padding="8dp"
            android:text="description"
            android:textColor="#666"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
                android:id="@+id/text_exchangedate"
                android:layout_width="106dp"
                android:layout_height="34dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"



                android:layout_marginRight="0dp"
                android:layout_marginBottom="295dp"

                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="5"
                android:shadowRadius="5"

                android:text="data:00000"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" android:layout_marginEnd="0dp"/>
        <TextView

            android:id="@+id/text_rate"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_name_liner"
            android:layout_alignBaseline="@+id/text_Cc"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:shadowColor="#7c7b7b"
            android:shadowDx="2"
            android:shadowDy="1"
            android:shadowRadius="5"



            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="-48dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:text="TextView"
            android:textColor="#2b49dc"
            android:textSize="24sp"
            android:textStyle="bold" />


    </RelativeLayout>
</android.support.v7.widget.CardView>


